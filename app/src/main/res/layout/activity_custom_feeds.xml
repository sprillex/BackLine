<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL (RSS or Mastodon Feed)" />

    <Button
        android:id="@+id/btnAddRss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add RSS Feed" />

    <Button
        android:id="@+id/btnAddMastodon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Mastodon Feed" />

    <Button
        android:id="@+id/btnAddHtml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add HTML Page" />

    <Button
        android:id="@+id/btnBindery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Bindery (ZIM)" />

    <Button
        android:id="@+id/btnKiwix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiwix Library" />

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Library (Downloads)" />

</LinearLayout>
